<% include partials/header %>

<div class="ui main text container">
	<div class="ui huge header">Blog App</div>
	<div class="ui top attached segment">
		<div class="ui divided items">
			<% blogs.forEach(function(blogs){ %>
			<div class="item">
				<div class="ui small rounded image">
					<img src="<%= blogs.image %>">
				</div>
				<div class="content">
					<a href="/blogs/<%= blogs._id %>" class="header"> <%= blogs.title %> </a>
					<div class="meta">
						<span><%= blogs.created.toDateString() %></span>
					</div>
					<div class="description">
						<p><%= blogs.body.substring(0,100) %>.... </p>
					</div>
					<div class="extra">
						<a href="/blogs/<%= blogs._id %>" class="ui floated basic violet button">
						Read more
						<i class="right chevron icon"></i>
						 </a>
					</div>
				</div>
		 	</div>
			<% }) %>
		</div>
	</div> 
</div>
<% include partials/footer %>